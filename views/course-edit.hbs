
<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field ">
        <input placeholder="Placeholder" name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Cours Name</label>
        <span class="helper-text" data-error="add name" ></span>
         
    </div>

    <div class="input-field ">
        <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Cours price</label>
        <span class="helper-text" data-error="add price" ></span>
         
    </div>
   
    <div class="input-field ">
        <input placeholder="Placeholder" name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Image</label>
        <span class="helper-text" data-error="add image" ></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Save</button>
</form>
<br>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-red">Delete this course</button>
</form>