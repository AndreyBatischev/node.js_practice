<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
            <img class="avater" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
            <p>Photo not found</p>
        {{/if}}
    </div>

    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data" >
            <p><strong>You email: {{user.email}}</strong></p>

            <div class="input-field">
                <input type="text" id="name" name="name" class="validate" required value="{{user.name}}">
                <label for="name">You name</label>
                <span class="helper-text" data-error="Enter name"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Load avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn"> Change avatar </button>
        </form>

    </div>
</div>